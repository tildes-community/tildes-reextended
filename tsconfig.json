    "esModuleInterop": true,
    "lib": [
      "ES2020"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "build/",
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "source/**/*.ts",
    "vite.config.ts"
