{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "build/",
    "strict": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
  },
  "include": [
    "source/ts/**/*.ts",
    "scripts/*.ts"
  ],
  "exclude": [
    "node_modules/"
  ]
}
